@model LoginModel
@{
    ViewData["Title"] = "Login";
}


        <div class="limiter">
            <div class="container-login100">
                <div class="wrap-login100  p-b-10">
                    <form asp-action="Login" asp-controller="Auth" method="post" class="login100-form validate-form">
                        <span class="login100-form-title p-b-20">
                            Logare
                        </span>
                        @Html.ValidationSummary(true, null, new { @class = "text-danger" })
                        @Html.AntiForgeryToken()
                        <div class="wrap-input100 validate-input m-b-10" data-validate="Password is required">
                            <input asp-for="@Model.Email" type="email" class="input100" placeholder="Email" name="Email" required="">
                            @Html.ValidationMessageFor(m => m.Email, null, new { @class = "text-danger" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock"></i>
                            </span>
                        </div>

                        <div class="wrap-input100 validate-input m-b-10" data-validate="Password is required">
                            <input asp-for="@Model.Password" type="password" class="input100" placeholder="Password" name="Password" id="password1" required="">
                            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "text-danger" })
                            <span class="focus-input100"></span>
                            <span class="symbol-input100">
                                <i class="fa fa-lock"></i>
                            </span>
                        </div>
                        <div class="container-login100-form-btn p-t-10">
                            <button class="login100-form-btn" value="Login">

                                Login
                            </button>

                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div class="modal fade" id="aModal" tabindex="-1" role="dialog" aria-labelledby="aModalLabel" align="center"
             aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="aModalLabel">Message</h4>
                    </div>
                    <div class="modal-body">
                        @ViewBag.Message
                    </div>
                    <div class="modal-footer">
                        <button id="myButton" type="button" class="btn btn-primary" data-dismiss="modal">OK</button>
                    </div>
                </div>
            </div>
        </div>



    </div>
</section>

<script src="~/vendor/jquery/jquery-3.2.1.min.js"></script>
<script src="~/vendor/bootstrap/js/popper.js"></script>
<script src="~/vendor/bootstrap/js/bootstrap.min.js"></script>
<script src="~/vendor/select2/select2.min.js"></script>
<script src="~/js/main.js"></script>