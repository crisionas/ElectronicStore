<script type="text/javascript">
        $(document).ready(function () {
            $.ajax({
                type: 'GET',
                url: '@Url.Action("GetApplianceProducts", "Shop")',
                success: function (prod) {
                    $.each(prod, function (i, src) {
                        $("<div>").attr({
                            'class': "product-wraper",
                            'id': "Newprod_" + prod[i].id.toString() + ""
                        }).appendTo(".produseNoi-BaseBodyContainer");

                        $('<img />')
                            .attr('src', "" + prod[i].image1 + "")
                            .attr('class', "product-img")
                            .appendTo($('#Newprod_' + prod[i].id.toString() + ''));

                        $("<div>",
                            {
                                class: "product-titlul",
                                text: "" + prod[i].brand + ""
                            }).appendTo($('#Newprod_' + prod[i].id.toString() + ''));

                        $("<div>",
                            {
                                class: "product-autor",
                                text: "" + prod[i].mark + ""
                            }).appendTo($('#Newprod_' + prod[i].id.toString() + ''));

                        $("<div>",
                            {
                                class: "product-pret",
                                text: "" + prod[i].price + " Lei"
                            }).appendTo($('#Newprod_' + prod[i].id.toString() + ''));


                        $("<button>",
                            {
                                class: "btn btn-info product-cumpara",
                                name: "ButonulCumpara",
                                id: prod[i].id.toString(),
                                text: "Cumpara"
                            }).appendTo($('#Newprod_' + prod[i].id.toString() + ''));


                    });


                },
                error: function (data) {
                    alert(data);
                }
            });
        });
</script>


