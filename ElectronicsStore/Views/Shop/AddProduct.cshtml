        </div>
    </div>
</div>
<script type="text/javascript">
    var a = document.getElementById('applianceBtn');
    var b = document.getElementById('electrobtn');
    a.addEventListener('click',function(){
        a.style.display="none";
        b.style.display="none";
        document.getElementById('formAppliance').style.display="";
    });
    b.addEventListener('click',function(){
        a.style.display="none";
        b.style.display="none";
        document.getElementById('formElectric').style.display="";
    });
</script>